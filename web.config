<?xml version="1.0"?>
<configuration>
    <system.webServer>
        <rewrite>
            <rules>
                <!-- Serve homepage snippet to crawlers using _escaped_fragment_ -->
                <rule name="crawler snippet" stopProcessing="true">
                    <match url=".*" ignoreCase="false" />
                    <conditions logicalGrouping="MatchAll">
                        <add input="{QUERY_STRING}" pattern="_escaped_fragment_" ignoreCase="false" />
                        <add input="{URL}" pattern="^(dist|img|lottie|snippets)" ignoreCase="false" negate="true" />
                    </conditions>
                    <action type="Rewrite" url="snippets/1.html" />
                </rule>

                <!-- Pass through static assets -->
                <rule name="static assets" stopProcessing="true">
                    <match url="^.+(dist|img|lottie|snippets)(/(.*))?" ignoreCase="false" />
                    <action type="Rewrite" url="{R:1}{R:2}" appendQueryString="true" />
                </rule>

                <!-- SPA fallback to index.html -->
                <rule name="spa fallback" stopProcessing="true">
                    <match url=".*" ignoreCase="false" />
                    <conditions logicalGrouping="MatchAll">
                        <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
                    </conditions>
                    <action type="Rewrite" url="index.html" appendQueryString="true" />
                </rule>
            </rules>
        </rewrite>
    </system.webServer>
</configuration>
